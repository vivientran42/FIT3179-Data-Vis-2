{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": 500,
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vivientran42/FIT3179-Test/main/js/neighbourhoods.json",
        "format": {"type": "topojson", "feature": "neighbourhoods"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vivientran42/FIT3179-Test/main/data/listings-summary.csv"
      },
      "mark": {"type": "circle", "size": 5},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "color": {"field": "room_type", 
                  "type": "nominal", 
                  "scale": {
                    "domain": ["Entire home/apt", "Hotel room", "Private room", "Shared room"],
                    "range": ["#E81881", "#F15A25","#18B6AA", "#BDD63D"]},
			"title": "Room Type"
          },
        "tooltip":[
          {
          "field": "price",
          "type": "quantitative",
          "format": ",",
          "title": "Price" 
          },
          {
          "field": "neighbourhood",
          "type": "nominal",
          "title": "Neighbourhood" 
          },
          {
          "field": "room_type",
          "type": "nominal",
          "title": "Room Type" 
          }
        ],
        "opacity": {
          "condition": {"selection": "room_type_highlight", 
                        "value": 0.8}, "value": 0
        }
      },
      "selection": {"room_type_highlight": {
            "type": "multi",
            "fields": ["room_type"],
            "bind": "legend"
        }
      },
      "transform": [
        {"filter": "datum.price <= max_price"}
      ]
    }
  ],
  "params": [
    {"name": "max_price",
      "value": 2000,
     "bind": {
        "input": "range",
        "min": 0,
        "max": 2000,
        "step": 5,
        "name": "Maximum Price: "
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
     }
  }
}
